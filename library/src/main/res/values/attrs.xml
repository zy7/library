<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="dividerLineHeight"          format="dimension" />
    <attr name="dividerLine"                format="color" />

    <declare-styleable name="TitleBar">
        <attr name="immersive"              format="boolean" />
        <attr name="title"                  format="string" />
        <attr name="titleSize"              format="dimension" />
        <attr name="titleColor"             format="color" />
        <attr name="subTitleSize"           format="dimension" />
        <attr name="subTitleColor"          format="color" />
        <attr name="btnTextSize"            format="dimension" />
        <attr name="btnTextColor"           format="color" />
        <attr name="btnTextPadding"         format="dimension" />
        <attr name="btnBackground"          format="reference" />
        <attr name="leftBtnDrawable"        format="reference" />
        <attr name="leftBtnText"            format="string" />
        <attr name="dividerLineHeight" />
        <attr name="dividerLine" />
    </declare-styleable>

    <declare-styleable name="BottomBar">
        <attr name="scaleAnim" format="boolean"/>
        <attr name="dividerLineHeight" />
        <attr name="dividerLine" />
    </declare-styleable>

    <declare-styleable name="CountdownTextView">
        <attr name="interval"               format="integer"/>
        <attr name="totalTimes"             format="integer" />
    </declare-styleable>

    <declare-styleable name="SideBar">
        <attr name="sectionBackground"              format="reference|color"/>
        <attr name="sectionTextColor"               format="reference|color"/>
        <attr name="sectionTextPadding"             format="dimension"/>
        <attr name="sectionTextSize"                format="dimension"/>
        <attr name="sectionMargin"                  format="dimension"/>
        <attr name="sectionTextArray"               format="reference"/>
        <attr name="sectionDrawableTop"             format="reference"/>
        <attr name="sectionDrawableClickable"       format="boolean"/>
    </declare-styleable>
    
</resources>